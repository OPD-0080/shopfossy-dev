    <div class="form-wrapper" id="create-form-wrapper">
        <div class="header"><h2> Preview Data </h2></div>


        <form action="/submitCreateData" class="form db-container" method="post" enctype="multipart/form-data">
            <div class="db-preview">
                <div class="preview-content-wrapper">
                    <div class="preview-content-container">
                        <% if (preview !== undefined || preview !== null) { %>
                            <% if (preview.length == 0) { %>
                                <div class="preview-empty-content">
                                    <div class="empty-preview"> Data is Empty </div>
                                </div>
                            <% } else { %>

                                <% preview.forEach(data => { %>
                                    <!-------- SINGLE CATEGORY DATA SECTION -------------->
                                    <div class="show-preview-wrap">
                                        <div class="preview-headers">
                                            <div>
                                                <div class="preview-collapse" data-arrow="1"></div>
                                                <h5> <%- data.company %> </h5>
                                                <div class="file-icon"><div class="i"></div></div>
                                            </div>
                                            <div class="sub-headers">
                                                <ul>
                                                    <li> Total : <span> <%- data.JSON_total %> </span></li>
                                                    <li> Used : <span> <%- data.JSON_used_data %> </span></li>
                                                    <li> Remainig : <span> <%- data.JSON_remaining_data %> </span></li>
                                                </ul>
                                            </div>
                                        </div>
                                        <% let arr = [] %>
                                        <% data.JSON_main.forEach(main => { %>
                                            <% data.JSON_des.forEach(des => { %>
                                                <% if (main.id == des.id) { %>
                                                    <% arr.push({main,des}) %>
                                                <% } %>
                                            <% }) %>
                                        <% }) %>
                                        <%# console.log("UI..ooo...", arr) %>
                                        <div class="single-preview-content">
                                            <% arr.forEach(el => { %>
                                                <div class="show-preview-content" data-content="<%- el.main.id %>">
                                                    <div class="show-content show-main-content" id="show-main-content">
                    
                                                        <div class="show-data-content">
