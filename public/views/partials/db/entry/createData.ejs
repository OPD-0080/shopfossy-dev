                                                                <% if (el.des.tb_para_1 !== "") { %> <li> <%- el.des.tb_para_1 %> :  <span> <%- el.des.tb_det_1 %> </span></li> <% } else { %>  <% } %>
                                                                <% if (el.des.tb_para_2 !== "") { %> <li> <%- el.des.tb_para_2 %> :  <span> <%- el.des.tb_det_2 %> </span></li> <% } else { %>  <% } %>
